@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Databox</title>
    <link rel="stylesheet" href="~/css/site.r.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <link rel="icon" type="image/png" href="~/databox-icon.png" />
</head>

<body class="bg-linear-to-br from-background-gradientStart to-background-gradientEnd text-gray-800 font-sans min-h-screen flex flex-col">

    <!-- Header -->
    <header>
        <nav class="bg-white border-b border-gray-200 shadow relative">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" x-data="{ open: false }">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a asp-area="" asp-controller="Data" asp-action="Index" class="flex items-center space-x-2">
                            <img src="~/databox-icon.png" alt="Logo" class="h-8 w-8" />
                            <span class="text-xl font-semibold">Databox</span>  
                        </a>
                    </div>
                    <div class="flex items-center sm:hidden">
                        <!-- Hamburger -->
                        <button x-on:click="open = !open" class="text-gray-600">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="hidden sm:flex sm:items-center space-x-6">
                        <a asp-area="" asp-controller="Data" asp-action="Index"
                            class="text-gray-700 hover:text-blue-600">Home</a>
                        <a asp-area="" asp-controller="Data" asp-action="Privacy"
                            class="text-gray-700 hover:text-blue-600">Privacy</a>
                    </div>
                </div>

                <!-- Mobile Menu -->
                <div
                    class="x-cloak sm:hidden absolute top-full left-0 right-0 bg-white shadow-md z-50"
                    x-show="open"
                    @@click.away="open = false"
                    x-transition
                >
                    <a asp-area="" asp-controller="Data" asp-action="Index"
                        class="block px-4 py-3 text-gray-700 hover:text-blue-600 border-b border-gray-200">Home</a>
                    <a asp-area="" asp-controller="Data" asp-action="Privacy"
                        class="block px-4 py-3 text-gray-700 hover:text-blue-600">Privacy</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow flex justify-center items-center p-4">
        <div class="w-full max-w-3xl">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-sm text-gray-500 text-center p-4 border-t border-gray-200">
        &copy; 2025 - Databox - <a asp-area="" asp-controller="Data" asp-action="Privacy" class="hover:text-gray-700">Privacy</a>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

